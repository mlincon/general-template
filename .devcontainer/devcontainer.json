{
  "name": "Common Codespace",

  // "build": {
  //   "dockerfile": "Dockerfile"
  // },

  "image": "mcr.microsoft.com/devcontainers/base:debian",

  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZshConfig": true
    },
    "ghcr.io/devcontainers/features/conda:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": false,
      "installJuypterlab": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/terraform:1": {}
  },

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "aws.telemetry": false,
        "redhat.telemetry.enabled": false,
        "aws.codeWhisperer.importRecommendation": false,
        "aws.codeWhisperer.includeSuggestionsWithCodeReferences": false,
        "aws.codeWhisperer.shareCodeWhispererContentWithAWS": false,
        "git.autofetch": false,
        "gitlens.showWelcomeOnInstall": false,
        "gitlens.showWhatsNewAfterUpgrades": false,
        "gitlens.plusFeatures.enabled": false,
        "editor.codeActionsOnSave": { "source.fixAll.eslint": "always" },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.minimap.renderCharacters": false,
        "editor.tabSize": 4,
        "editor.rulers": [80, 88, 100, 120],
        "files.autoSave": "afterDelay",
        "[html]": {
          "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
          "editor.foldingStrategy": "indentation"
        },
        "html.autoClosingTags": true,
        "editor.linkedEditing": true,
        "html.format.wrapLineLength": 100,
        "[json]": {
          "editor.defaultFormatter": "vscode.json-language-features"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnType": true,
          "editor.tabSize": 4
        },
        "python.formatting.provider": "none",
        "black-formatter.args": ["--line-length", "88"],
        "[yaml]": {
          "editor.insertSpaces": true,
          "editor.tabSize": 2,
          "editor.autoIndent": "keep",
          "gitlens.codeLens.scopes": ["document"],
          "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
          }
        },
        "files.watcherExclude": {
          "**/__pycache__/**": true,
          "**/*.log*": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/*/**": true
        },
        "files.trimTrailingWhitespace": true,
        "files.trimFinalNewlines": true,
        "diffEditor.ignoreTrimWhitespace": false,
        "jupyter.interactiveWindow.textEditor.executeSelection": true,
        "window.commandCenter": true,
        "redoclyOpenAPI.trace.server": "off",
        "[go]": {
            "editor.insertSpaces": false,
            "editor.formatOnSave": true,
            "editor.codeActionsOnSave": {
              "source.organizeImports": "always"
            }
          },
          "gopls": {
            "formatting.gofumpt": true
          },
          "go.lintTool": "golangci-lint",
          "go.lintFlags": ["--fast"]
      },

      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "GitHub.vscode-pull-request-github",
        "GitHub.codespaces",
        "golang.go",
        "github.vscode-github-actions",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "ms-python.black-formatter",
        "ms-python.python",
        "ms-python.mypy-type-checker",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-vscode-remote.remote-containers",
        "redhat.vscode-yaml",
        "GraphQL.vscode-graphql-syntax",
        "hashicorp.terraform",
        "esbenp.prettier-vscode",
        "matheusq94.TFS",
        "eamodio.gitlens",
        "huizhou.githd",
        "mhutchie.git-graph",
        "ExodiusStudios.comment-anchors",
        "shd101wyy.markdown-preview-enhanced",
        "hediet.vscode-drawio",
        "alefragnani.Bookmarks",
        "oderwat.indent-rainbow",
        "njpwerner.autodocstring",
        "rvest.vs-code-prettier-eslint",
        "ritwickdey.LiveServer",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "samuelcolvin.jinjahtml",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        "christian-kohler.path-intellisense",
        "ecmel.vscode-html-css",
        "sidthesloth.html5-boilerplate",
        "Redocly.openapi-vs-code",
        "qufiwefefwoyn.inline-sql-syntax",
        "docker.docker",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-containers"
      ]
    }
  },
  "forwardPorts": [3000, 5000, 5432, 7532, 8080],

  "onCreateCommand": "sh ./.devcontainer/onCreateCommand.sh",

  "postCreateCommand": "sh ./.devcontainer/postCreateCommand.sh",

  "postStartCommand": "sh ./.devcontainer/postStartCommand.sh"
}
